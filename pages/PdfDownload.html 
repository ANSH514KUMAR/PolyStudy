  <script src="../scripts/main.js"></script>
  <script src="../scripts/shuffle.js"></script>
<script>
    // 1. Read value from URL
    const params = new URLSearchParams(window.location.search);
    const selectedSite = params.get("site");
    document.getElementById("siteId").textContent = selectedSite;

    // 2. Fetch JSON
    fetch("/data/links.json")
        .then(response => response.json())
        .then(data => {
            // 3. Find matching link
            const match = data.links.find(
                item => item.title === selectedSite
            );

            // 4. Assign link
        if (match) {
            document.getElementById("pdfview").src = match.PreviewLink;
            document.getElementById("pdfDownload").href = match.downloadLink;
            document.getElementById("siteTitle").textContent = match.title;
            document.getElementById("Download-Title").textContent = match.title;
            document.getElementById("Chapter").textContent = match.Chapter;
            document.getElementById("Subject").textContent = match.Subject;
            }
            if (match.desc) {
    document.getElementById("siteDesc").textContent = match.desc;
            }else {
                document.getElementById("pdfview").textContent = "Link not found";
            }
        })
        .catch(err => console.error(err));
</script>
